{
    "name": "convertize/convertize-world",
    "description": "Hello Convertize package",
    "keywords": [
        "convertize",
        "convertize-world"
    ],
    "homepage": "https://github.com/convertize/convertize-world",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Convertize",
            "email": "info@convertize.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Convertize\\ConvertizeWorld\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Convertize\\ConvertizeWorld\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
